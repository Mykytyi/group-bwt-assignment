{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:node/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "import/no-extraneous-dependencies": "off",
    "camelcase": "off",
    "class-methods-use-this": "off",
    "max-classes-per-file": "off",
    "no-unused-vars": "warn",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "arrow-body-style": "off"
  },
  "overrides": [
    {
      "files": [
        "tests/**/*"
      ],
      "plugins": [
        "jest"
      ],
      "env": {
        "jest": true
      },
      "rules": {
        "global-require": "off"
      }
    }
  ]
}
